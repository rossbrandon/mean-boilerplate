.container(ng-controller="ProfileController")
    .well
        form.form-horizontal(name="profileForm")
            legend User Profile
            .form-group
                label.col-md-2.control-label(for="email") Email
                .col-md-10
                    .input-group
                        span.input-group-addon @
                        input.form-control(name="email", type="email", placeholder="Email", ng-model="email", required)
            .form-group
                label.col-md-2.control-label(for="fname") First Name
                .col-md-10
                    input.form-control(name="fname", type="text", placeholder="First Name", ng-model="fname", required)
            .form-group
                label.col-md-2.control-label(for="lname") Last Name
                .col-md-10
                    input.form-control(name="lname", type="text", placeholder="Last Name", ng-model="lname", required)
            .form-group
                label.col-md-2.control-label(for="password") Password
                .col-md-10
                    input.form-control(id="password", name="password", type="password", placeholder="New Password (Optional)", ng-model="password")
            .form-group
                label.col-md-2.control-label(for="passwordConfirmation") Confirmation
                .col-md-10
                    input.form-control(id="passwordConfirmation", name="passwordConfirmation", type="password", placeholder="New Password Confirmation", ng-model="passwordConfirmation", pw-check="password")
                    .msg-block(ng-show="profileForm.$error")
                        span.text-danger(ng-show="profileForm.passwordConfirmation.$error.pwmatch") Passwords do not match
            .form-group
                .col-md-10.col-md-offset-2
                    .pull-right
                        button.btn.btn-primary(ng-click="update()", ng-disabled="signupForm.$invalid") Update Profile
                        | &nbsp;
                        a.btn.btn-default(href="/") Cancel